.container
  .row
    .col-sm-12.col-md-8.col-lg-5.px-5.px-sm-0.mx-auto
      h1
        | Editing Book
      = render 'layouts/error_messages', value: @book
      = form_with model: @book, local: true do |f|
        .form-group
          label[for="book_title"]
            | Title
          |  <input type="text" class="form-control" id="book_title" name='book[title]' value=
          = @book.title
          |  > 
        .form-group
          label[for="book_opinion"]
            | Opinion
          textarea#book_opinion.form-control[name="book[body]"]
            = @book.body
        .form-group
          button.btn.btn-success[type="submit"]
            | Update Book
      = link_to 'Show', book_path(@book)
      |  | 
      = link_to 'Back', books_path
