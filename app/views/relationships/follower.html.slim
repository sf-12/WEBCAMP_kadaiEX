.container
  .row
    .col-md-12
      h2
        | Follower Users
      table.table.table-hover.table-inverse
        thead
          tr
            th
              | image
            th
              | name
            th[colspan="3"]
        - @followers.each do |follower|
          tbody
            tr
              td
                = attachment_image_tag follower, :profile_image, size:'40x40', fallback: "no_image.jpg"
              td
                = follower.name
              td
                p
                  | フォロー数：
                  = follower.followings.count
              td
                p
                  | フォロワー数：
                  = follower.followeds.count
              td
                = link_to 'Show', user_path(follower)
